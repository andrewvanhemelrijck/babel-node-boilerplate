{
  "name": "babel-node-boilerplate",
  "version": "0.0.1",
  "description": "a simple node boilerplate with babel",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon bin/dev",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir dist && babel server -s -d dist",
    "production": "npm run build && nodemon bin/production"
  },
  "author": "Andrew Van Hemelrijck",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "nodemon": "^1.17.3"
  }
}
